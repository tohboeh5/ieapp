---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout title="Ugoite Docsite">
  <section class="rounded-xl border p-6" style="background: var(--doc-card); border-color: var(--doc-border);">
    <h1 class="text-3xl font-bold">Ugoite Documentation</h1>
    <p class="mt-2 text-sm" style="color: var(--doc-muted);">
      This site renders the main project docs from the repository <code>docs/</code> directory.
    </p>
    <ul class="mt-4 list-disc space-y-1 pl-6 text-sm">
      <li><a class="underline" href="/docs/guide/cli">CLI Guide</a></li>
      <li><a class="underline" href="/docs/spec/api/rest">REST API Spec</a></li>
      <li><a class="underline" href="/docs/spec/api/mcp">MCP API Spec</a></li>
    </ul>
  </section>
</BaseLayout>
