---
import BaseLayout from "../layouts/BaseLayout.astro";
import { navSections } from "../lib/navigation";
---

<BaseLayout title="Ugoite Docsite" description="Ugoite documentation portal for specs, APIs, guides, and tasks.">
  <section class="doc-card">
    <span class="doc-badge">Local-First / AI-Native</span>
    <h1 class="mt-3 text-4xl font-bold tracking-tight">Build with confidence using the live Ugoite specs</h1>
    <p class="mt-3 text-sm" style="color: var(--doc-muted);">
      This portal renders repository-backed documentation from <code>docs/</code>, so implementation and documentation stay aligned.
      Explore architecture, data model, API contracts, and UI specs from a single, searchable structure.
    </p>
    <div class="mt-5 flex flex-wrap gap-2 text-sm">
      <a href="/docs/spec/index" class="rounded-full px-4 py-2" style="background: var(--doc-accent-soft); color: var(--doc-accent);">Open Spec Index</a>
      <a href="/docs/tasks/tasks" class="rounded-full border px-4 py-2" style="border-color: var(--doc-border);">View Milestone Tasks</a>
      <a href="/docs/spec/api/rest" class="rounded-full border px-4 py-2" style="border-color: var(--doc-border);">REST API</a>
    </div>
  </section>

  <section class="mt-4 grid gap-4 md:grid-cols-2">
    {navSections.map((section) => (
      <article class="doc-card">
        <h2 class="text-lg font-semibold">{section.title}</h2>
        <ul class="mt-3 space-y-2 text-sm" style="color: var(--doc-muted);">
          {section.items.map((item) => (
            <li>
              <a href={item.href} class="flex items-center justify-between rounded px-2 py-1 hover:opacity-80">
                <span>{item.title}</span>
                <span aria-hidden="true">â†’</span>
              </a>
            </li>
          ))}
        </ul>
      </article>
    ))}
  </section>
</BaseLayout>
