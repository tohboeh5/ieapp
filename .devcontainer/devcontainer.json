{
	"name": "mise",
	"image": "mcr.microsoft.com/devcontainers/base:ubuntu-24.04",
	"features": {
		"ghcr.io/devcontainers-extra/features/mise:1": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"biomejs.biome",
				"charliermarsh.ruff",
				"astral-sh.ty",
				"hverlin.mise-vscode"
			]
		}
	},
	"mounts": [],
	"containerEnv": {},
	"remoteEnv": {},
